<form style="display: inline" method="post" action="{{ path('missatge_delete', {'id': missatge.id}) }}" onsubmit="return confirm('Estas segur que vols borrar el missatge?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ missatge.id) }}">
    <button class="btn btn-primary"><i class="fas fa-trash"></i></button>
</form>
