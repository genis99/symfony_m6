{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Tria la categoria que vols vincular al canal seleccionat.</h1>
        <div style="display: flex; justify-content: start;">
            {% for categoria in categories %}
                <div style="margin-top: 1em;">
                    <a style="margin-right: 1em" href="{{ path('categoria_canal', {'canal_id': canal_id, 'categoria_id': categoria.id}) }}"><button id="">{{ categoria.name }}</button></a>
                </div>
            {% endfor %}
        </div>
        <div style="margin-top: 1em;"><a href="{{ path('canals') }}">Tornar a canals</a></div>
    </div>
{% endblock %}
