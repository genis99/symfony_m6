{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}
<style>
    h1 {
        text-align: center;
    }
    #canals {
        margin: 1em 10%; font: 18px/1.5 sans-serif;
        /*border: 1px solid black;*/
    }
    .canal {
        border: 1px solid black;
        padding: 1em;
    }
    .delete_canal {
        float: right;
    }
    #afegir_canal {
        padding: 1em;
        border-radius: 1em;
        background-color: #5eb5e0;
        margin-top: 1em;
    }
    .delete_canal button {
        padding: 1em;
        border-radius: 1em;
        background-color: #fc2003;
    }
    /*.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }*/
</style>


<h1>Canals</h1>

<div id="canals">

    {% for canal in canals %}
        <div class="canal">
            {{ include('canal/_delete_form.html.twig') }}
            <h2>{{ canal.name }}</h2>
            <h3><u>Missatges</u></h3>
            <ul>
                {% for missatge in canal.getMissatges %}
                    <li>
                        <span>{{ missatge.text }}</span>
                        <span>
                            <button>EDIT</button>
                            <button>DELETE</button>
                        </span>
                    </li>
                    <br>
                {% endfor %}
            </ul>
        </div>
{#    <p>{{ controller_name.name }}</p>#}

    {% endfor %}

    <button id="afegir_canal">Afegir Canal</button>

</div>
{% endblock %}
